<div class="row py-3">
  <div class="<%= common_column_spacing %>">
    <h1>Edit User</h1>

    <%= render 'form', user: @user %>

    <%= link_to 'View Public Profile', @user, class: "btn btn-primary btn-block btn-block col-12 my-1" %>
    <%= link_to "Sign Out", destroy_user_session_path, method: :delete, data: { confirm: 'Are you sure you want to sign out?' }, class: "btn btn-danger btn-block col-12 my-1" %>
    <%= link_to 'Back', users_path, class: "btn btn-primary btn-block btn-block col-12 my-1" %>
  </div>
</div>
