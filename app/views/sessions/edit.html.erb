<div class="container">
  <div class="row py-3">
    <div class="<%= common_column_spacing %>">
      <h1>Editing Session</h1>

      <%= render 'form', session: @session %>

      <%= link_to 'Show', @session, class: "btn btn-primary my-1 btn-block col-12" %>
      <%= link_to 'Back', root_path, class: "btn btn-primary my-1 btn-block col-12" %>
      <%= button_to 'Destroy', @session, method: :delete, data: { confirm: 'Are you sure?' }, data_no_turbolink: "true", class: "btn btn-danger btn-block col-12 my-1" %>
    </div>
  </div>
</div>